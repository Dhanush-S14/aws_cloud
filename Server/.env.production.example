NODE_ENV=production
# Use 8080 when CloudFront connects directly to EC2 (allowed origin port)
PORT=8080

# Frontend origin (your CloudFront/custom domain)
CORS_ORIGIN=https://app.yourdomain.com

# MongoDB Atlas
MONGODB_URI=mongodb+srv://<user>:<pass>@<cluster-url>/?retryWrites=true&w=majority&appName=EduHaven
MONGODB_DBNAME=eduhaven

# JWT/auth
JWT_SECRET=change_me
TOKEN_EXPIRY=1d
REFRESH_TOKEN_EXPIRY=7d
Activation_Secret=change_me_too

# Email provider (Resend)
RESEND_KEY=

# Socket.IO rate limits
SOCKET_MESSAGE_LIMIT=10
SOCKET_ROOM_LIMIT=5
SOCKET_TYPING_LIMIT=20

# Note: copy this file to Server/.env on the server and fill the values.
# If you later add an ALB/Nginx, you can switch PORT back to 3000.
